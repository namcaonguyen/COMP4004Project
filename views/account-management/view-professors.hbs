<style>
    .card {
        margin: 0 auto;
        float: none;
        margin-bottom: 10px;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-8 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h3 class="card-title text-center">Course Management System</h3>
                    <h5 class="card-title text-center">View Professors</h5>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">View Professors</li>
                        </ol>
                    </nav>

                    {{#if error}}
                    <div class="alert alert-danger">Error: {{error}}</div>
                    {{/if}}

                    <hr class="my-4">
                    <div id="message" style="text-align: center;"></div>
                    <br>

                    {{#each professors}}
                    <form method="POST">
                        <div class="card" style="width: 30rem;">
                            <div class="card-body">
                                <h5 class="card-title">{{this.fullname}}</h5>
                                <h5 class="card-title">{{this.email}}</h5>
                                <br>
                                <input type="hidden" value="{{this._id}}" name="professorObjectID">
                                <button class="btn btn-lg btn-primary btn-block text-uppercase" name="deleteProfessor" type="submit">Delete Professor</button>
                            </div>
                        </div>
                    </form>
                    {{/each}}

                    <hr class="my-4">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">View Professors</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var data = "{{professors}}";
    if (data.length === 0) {
        $("#message").html("There are no professors at this moment!");
    } else {
        $("#message").html("Here are all the professors with an account.");
    }
</script>