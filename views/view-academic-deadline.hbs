<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-8 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h3 class="card-title text-center">Course Management System</h3>
                    <h5 class="card-title text-center">View Academic Deadline</h5>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">View Academic Deadline</li>
                        </ol>
                    </nav>

                    <hr class="my-4">
                    <div id="deadlineLabel" style="text-align: center;">Here is the academic deadline:</div>
                    <div id="deadlineDate" style="text-align: center;"><strong>{{deadlineDate}}</strong></div>

                    {{#if administrator}}
                        <hr class="my-4">
                        <div id="adminSetDeadlineLabel" style="text-align: center;">As an Administrator, you can set the Academic Deadline here.</div>
                        {{#if error}}
                            <div class="alert alert-danger">{{error}}</div>
                        {{/if}}
                        <form method="POST">
                            <div class="form-label-group">
                                <label for="year">Year:</label>
                                <input type="number" id="year" name="year" class="form-control {{response}}" required autofocus>
                                <label for="month">Month:</label>
                                <input type="number" id="month" name="month" class="form-control {{response}}" required autofocus>
                                <label for="day">Day:</label>
                                <input type="number" id="day" name="day" class="form-control {{response}}" required autofocus>
                            </div>
                            <br>
                            <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Set New Academic Deadline</button>
                        </form>
                        <hr class=" my-4">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">View Academic Deadline</li>
                            </ol>
                        </nav>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>