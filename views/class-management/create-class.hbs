<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h3 class="card-title text-center">Course Management System</h3>
                    <h5 class="card-title text-center">{{title}}</h5>
                    <hr class="my-4">
                    {{#if error}}
                    <div class="alert alert-danger">{{error}}</div>
                    <hr class="my-4">
                    {{/if}}
                    
                <form name="class_creation_form" method="POST">
                    <label for="course">Course ID:</label>
                    <select class="browser-default custom-select" name="course" id="course">
                        {{#each courses}}
                        <option value={{this._id}}>{{this.courseCode}}</option>
                        {{/each}}
                    </select>

                    <br><br>

                    <label for="professor">Professor for the class:</label>
                    <select class="browser-default custom-select" name="professor" id="professsor">
                        {{#each professors}}
                        <option value={{this._id}}>{{this.fullname}}</option>
                        {{/each}}
                    </select>

                    <br><br>

                    <div class="form-label-group">
                        <label for="capacity">Class Capacity:</label>
                        <input type="number" id="capacity" name="capacity" class="form-control {{response}}" placeholder="200" required autofocus>
                    </div>

                    <br>

                    <label for="prereqs">Prerequisites for the class:</label>
                    <select class="browser-default custom-select" name="prereqs" id="prereqs" multiple>
                        {{#each courses}}
                        <option value={{this.courseCode}}>{{this.courseCode}}</option>
                        {{/each}}
                    </select>

                    <br><br>

                    <label for="precludes">Precluded classes:</label>
                    <select class="browser-default custom-select" name="precludes" id="precludes" multiple>
                        {{#each courses}}
                        <option value={{this.courseCode}}>{{this.courseCode}}</option>
                        {{/each}}
                    </select>

                    <br>
                    <hr class="my-4">
                    <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Submit</button>
                </form>
                </div>
            </div>
        </div>
    </div>
</div>