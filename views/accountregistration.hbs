<div class="container">
<div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
    <div class="card card-signin my-5">
        <div class="card-body">
            <h3 class="card-title text-center">Course Management System</h3>
            <h5 class="card-title text-center" id="accountRegistrationPage" value="sdf">Account Registration</h5>
            <hr class="my-4">
			{{#if error}}
				<div class="alert alert-danger">{{error}}</div>
                <hr class="my-4">
			{{/if}}
			<form name="account_registration_form" method="POST">
				<label for="accountType">Select your account type:</label>
				<select class="browser-default custom-select" name="accountType" id="accountType">
					<option value="student">Student</option>
					<option value="professor">Professor</option>
					<option value="administrator">Administrator</option>
				</select>

				<br><br>

				<div class="form-label-group">
					<label for="inputFirstName">First Name:</label>
					<input id="inputFirstName" name="inputFirstName" class="form-control {{response}}" placeholder="First Name" required autofocus>
				</div>

				<br>

				<div class="form-label-group">
					<label for="inputLastName">Last Name:</label>
					<input id="inputLastName" name="inputLastName" class="form-control {{response}}" placeholder="Last Name" required autofocus>
				</div>

				<br>

				<div class="form-label-group">
					<label for="inputEmail">Email Address:</label>
					<input type="email" id="inputEmail" name="inputEmail" class="form-control {{response}}" placeholder="Email Address" required autofocus>
				</div>

				<br>

				<div class="form-label-group">
					<label for="inputPassword">Password:</label>
					<input type="password" id="inputPassword" name="inputPassword" class="form-control {{response}}" placeholder="Password" required>
				</div>

				<br>

				<div class="form-label-group">
					<label for="inputConfirmPassword">Confirm Password:</label>
					<input type="password" id="inputConfirmPassword" name="inputConfirmPassword" class="form-control {{response}}" placeholder="Confirm Password" required>
				</div>

                <hr class="my-4">
                <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Submit</button>
			</form>
        </div>
    </div>
    </div>
</div>
</div>