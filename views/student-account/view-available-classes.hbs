<style>
    .card {
        margin: 0 auto;
        float: none;
        margin-bottom: 10px;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-8 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h3 class="card-title text-center">Course Management System</h3>
                    <h5 class="card-title text-center">View Available Classes</h5>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">View Available Classes</li>
                        </ol>
                    </nav>

                    {{#if error}}
                        <div class="alert alert-danger">Error: {{error}}</div>
                    {{/if}}

                    <hr class="my-4">
                    <div id="message" style="text-align: center;"></div>
                    <br>

                    {{#each classes}}
                        <form name="account_registration_form" method="POST">
                            <div class="card" style="width: 30rem;">
                                <div class="card-body">
                                    <h5 class="card-title">{{this.courseCode}}</h5>
                                    <h5 class="card-title">{{this.title}}</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">Taught by: {{this.professor}}</h6>
                                    <h6 class="card-subtitle mb-2 text-muted">Total Capacity: {{this.totalCapacity}}</h6>
                                    <h7 class="card-subtitle mb-2 text-muted">Prerequisites: {{this.prereqs}}</h7>
                                    <br>
                                    <h7 class="card-subtitle mb-2 text-muted">Precludes: {{this.precludes}}</h7>
                                    <br>
                                    <button class="btn btn-lg btn-primary btn-block text-uppercase" name="enrollInClass" value={{this._id}} type="submit">Enroll in Class</button>
                                </div>
                            </div>
                        </form>
                    {{/each}}

                    <hr class="my-4">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">View Available Classes</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var data = "{{classes}}";
    if ( data.length === 0 ) {
        $("#message").html("There are no Classes at this moment!");
    } else {
        $("#message").html("Here are the Classes available for you to register in.");
    }
</script>