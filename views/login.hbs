<div class="container">
<div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
    <div class="card card-signin my-5">
        <div class="card-body">
            <h5 class="card-title text-center">Course Management System</h5>
            <form class="form-signin" method="POST">
                <div class="form-label-group">
                    <label for="inputEmail">Email address</label>
                    <input type="email" name ="inputEmail" id="inputEmail" class="form-control {{response}}" placeholder="Email address" required autofocus>
                </div>
                <br>
                <div class="form-label-group">
                    <label for="inputPassword">Password</label>
                    <input type="password" name ="inputPassword" id="inputPassword" class="form-control {{response}}" placeholder="Password" required>
                </div>
                {{#if response}}
                <div id="login-error-div" style="color: red"><br>Incorrect email or password.</div>
                {{/if}}
                <hr class="my-4">
                <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign in</button>
            </form>
          <form class="form-applyForAccount" method="POST">
            <hr class="my-4">
              <a href="/accountregistration">Create Account</a>
          </form>
        </div>
    </div>
    </div>
</div>
</div>