<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h3 class="card-title text-center">Course Management System</h3>
                    <h5 class="card-title text-center">Create New Deliverable</h5>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item"><a href="/view-classes">View Classes</a></li>
                            <li class="breadcrumb-item">{{this.classCourseCode}}</li>
                            <li class="breadcrumb-item active" aria-current="page">Create Deliverable</li>
                        </ol>
                    </nav>
                    <hr class="my-4">
                    {{#if error}}
                    <div class="alert alert-danger">{{error}}</div>
                    <hr class="my-4">
                    {{/if}}

                    <form name="deliverable_creation_form" method="POST">
                        <input type="hidden" value="{{this.classId}}" name="classId">

                        <label for="course">Title:</label>
                        <input id="title" name="title" class="form-control {{response}}" placeholder="" required autofocus>

                        <br><br>

                        <label for="description">Description:</label>
                        <textarea class="form-control" id="description" name="description" rows="3"></textarea>

                        <br><br>

                        <div class="form-label-group">
                            <label for="capacity">Weight in %</label>
                            <input type="number" id="weight" name="weight" class="form-control {{response}}" placeholder="10" required autofocus>
                        </div>

                        <br>
                        <hr class="my-4">
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Create Deliverable</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>